<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whereismytrain.busboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.whereismytrain.busboard.HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whereismytrain.busboard.Directions"
            android:label="@string/title_activity_directions" >
        </activity>
        <activity
            android:name="com.whereismytrain.busboard.Map"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.whereismytrain.busboard.Status"
            android:label="@string/title_activity_status" >
        </activity>
        <activity
            android:name="com.whereismytrain.busboard.Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>